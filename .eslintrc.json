{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": ["react", "jest"],
	"rules": {
		"code": 150,
		"excludedFiles": "*.tsx",
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-unused-vars": 1,
		"no-console": 1,
		"function-paren-newline": ["error", "multiline"],

		// REACT PLUGIN
		"react/jsx-max-props-per-line": [2, { "maximum": 8, "when": "always" }],
		"react/no-children-prop": 0
	}
}
